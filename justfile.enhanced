# Generate SBOM with enhanced metadata
sbom-generate:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "ğŸ“‹ Generating Software Bill of Materials..."
    
    # Generate SBOM using compliance tools
    cd compliance-tools
    cargo run --bin sbom-generator -- --project-root .. --output ../sbom.spdx.json
    
    # Generate additional formats if tools available
    if command -v cyclonedx-bom &> /dev/null; then
        echo "ğŸ“‹ Generating CycloneDX SBOM..."
        cyclonedx-bom -o ../sbom.cyclonedx.json
    fi
    
    echo "âœ… SBOM generated!"

# Comprehensive security audit
security-audit-comprehensive:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "ğŸ”’ Comprehensive security audit..."
    
    echo "ğŸ” Cargo audit..."
    cargo audit --deny warnings
    
    echo "ğŸš« Cargo deny..."
    cargo deny check --all-features
    
    echo "ğŸ” Checking dependencies..."
    cargo tree --duplicates
    
    echo "ğŸ“‹ Generating SBOM..."
    just sbom-generate
    
    echo "ğŸ›¡ï¸ Security validation..."
    just validate-security
    
    echo "âœ… Comprehensive security audit complete!"

# =============================================================================
# ENHANCED BUILD & DEPLOYMENT
# =============================================================================

# Build with security hardening
build-secure:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "ğŸ”’ Building with security hardening..."
    
    # Set security-focused environment variables
    export RUSTFLAGS="-D warnings -C target-cpu=native"
    
    # Build with all security features
    cargo build --workspace --all-features --release
    
    echo "âœ… Secure build complete!"

# Docker build with security scanning
docker-build-secure:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "ğŸ³ Building secure Docker images..."
    
    # Build images
    docker build -f auth-service/Dockerfile.secure -t auth-service:latest .
    docker build -f policy-service/Dockerfile -t policy-service:latest .
    
    # Scan images if trivy is available
    if command -v trivy &> /dev/null; then
        echo "ğŸ” Scanning images for vulnerabilities..."
        trivy image auth-service:latest
        trivy image policy-service:latest
    fi
    
    echo "âœ… Secure Docker build complete!"

# =============================================================================
# ENHANCED MAINTENANCE
# =============================================================================

# Update dependencies with security check
update-secure:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "ğŸ“¦ Updating dependencies securely..."
    
    # Update dependencies
    cargo update
    
    # Check for security issues
    cargo audit --deny warnings
    cargo deny check --all-features
    
    # Test after update
    just test
    
    echo "âœ… Secure dependency update complete!"

# Clean with verification
clean-verify:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "ğŸ§¹ Cleaning with verification..."
    
    # Clean build artifacts
    cargo clean
    rm -rf target/
    
    # Clean coverage reports
    rm -rf target/coverage-reports/
    
    # Clean benchmark results (keep latest)
    find benchmark-results/ -type f -name "*.txt" -not -name "latest.txt" -delete 2>/dev/null || true
    
    # Verify clean build
    echo "âœ… Verifying clean build..."
    just build
    
    echo "âœ… Clean and verify complete!"

