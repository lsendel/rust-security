set shell := ["/bin/bash", "-cu"]

# =============================================================================
# ENHANCED JUSTFILE - RUST SECURITY PLATFORM
# Comprehensive development automation with immediate improvements
# =============================================================================

# Default recipe that lists available commands
default:
    @just --list

# =============================================================================
# IMMEDIATE WINS - ENHANCED VALIDATION
# =============================================================================

# Complete CI pipeline locally (comprehensive validation)
ci-complete:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "ğŸ”„ Running complete CI pipeline locally..."
    
    echo "ğŸ“ Step 1/7: Format check..."
    just fmt-check
    
    echo "ğŸ” Step 2/7: Linting..."
    just lint
    
    echo "ğŸ§ª Step 3/7: Testing..."
    just test
    
    echo "ğŸ”’ Step 4/7: Security audit..."
    just audit
    
    echo "ğŸš« Step 5/7: Dependency check..."
    just deny
    
    echo "ğŸ“Š Step 6/7: Coverage check..."
    just coverage-check || echo "âš ï¸ Coverage below baseline"
    
    echo "ğŸ›¡ï¸ Step 7/7: Security validation..."
    just validate-security || echo "âš ï¸ Security issues detected"
    
    echo "âœ… Complete CI pipeline finished!"

# Quick validation for fast feedback (<30s target)
validate-quick:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "âš¡ Quick validation (30s target)..."
    
    start_time=$(date +%s)
    
    echo "ğŸ” Checking workspace..."
    cargo check --workspace --all-features --message-format=short
    
    echo "ğŸ“ Running clippy (essential only)..."
    cargo clippy --workspace --message-format=short -- -D warnings
    
    echo "ğŸ§ª Running unit tests only..."
    cargo test --workspace --lib --quiet
    
    end_time=$(date +%s)
    duration=$((end_time - start_time))
    
    echo "âœ… Quick validation complete in ${duration}s!"
    
    if [ $duration -gt 30 ]; then
        echo "âš ï¸ Warning: Validation took longer than 30s target"
    fi

# Security-focused validation sweep
validate-security:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "ğŸ”’ Security validation sweep..."
    
    echo "ğŸ” Cargo audit..."
    cargo audit --deny warnings
    
    echo "ğŸš« Cargo deny check..."
    cargo deny check --all-features
    
    echo "ğŸ›¡ï¸ Security script..."
    if [ -f "./scripts/security-audit.sh" ]; then
        ./scripts/security-audit.sh
    else
        echo "âš ï¸ Security audit script not found"
    fi
    
    echo "ğŸ” Checking for hardcoded secrets..."
    if command -v rg &> /dev/null; then
        rg -i "password|secret|key|token" --type rust src/ || echo "No obvious secrets found"
    fi
    
    echo "âœ… Security validation complete!"

# Performance validation and regression detection
validate-performance:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "ğŸ“Š Performance validation..."
    
    echo "ğŸƒ Running benchmarks..."
    cargo bench --workspace --quiet
    
    echo "ğŸ“ˆ Checking for regressions..."
    if [ -f "./scripts/performance/check-regression.sh" ]; then
        ./scripts/performance/check-regression.sh
    else
        echo "âš ï¸ Performance regression script not found"
    fi
    
    echo "âœ… Performance validation complete!"

# =============================================================================
# ENHANCED DEVELOPMENT TOOLS
# =============================================================================

# Install and configure development hooks
install-hooks:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "ğŸª Installing development hooks..."
    
    # Install pre-commit if not available
    if ! command -v pre-commit &> /dev/null; then
        echo "ğŸ“¦ Installing pre-commit..."
        pip install pre-commit || echo "âš ï¸ Failed to install pre-commit"
    fi
    
    # Install hooks
    pre-commit install
    pre-commit install --hook-type commit-msg
    
    # Test hooks
    echo "ğŸ§ª Testing hooks..."
    pre-commit run --all-files || echo "âš ï¸ Some hooks failed - this is normal on first run"
    
    echo "âœ… Development hooks installed!"

# Setup complete development environment
setup-dev-env:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "ğŸš€ Setting up complete development environment..."
    
    # Install required tools
    echo "ğŸ“¦ Installing Rust tools..."
    cargo install cargo-audit cargo-deny cargo-llvm-cov just || echo "Some tools may already be installed"
    
    # Install pre-commit hooks
    just install-hooks
    
    # Start development services
    echo "ğŸ³ Starting development services..."
    docker-compose up -d redis postgresql || echo "âš ï¸ Failed to start some services"
    
    # Verify setup
    echo "âœ… Verifying setup..."
    just validate-quick
    
    echo "ğŸ‰ Development environment ready!"

# =============================================================================
# ENHANCED TESTING & COVERAGE
# =============================================================================

# Generate comprehensive coverage report
coverage-report:
    #!/usr/bin/env bash
    set -euo pipefail
    export TEST_MODE=1
    echo "ğŸ“Š Generating comprehensive coverage report..."
    
    mkdir -p target/coverage-reports
    
    echo "ğŸ“ˆ HTML report..."
    cargo llvm-cov --workspace --all-features --html --output-dir target/coverage-reports/html
    
    echo "ğŸ“„ LCOV report..."
    cargo llvm-cov --workspace --all-features --lcov --output-path target/coverage-reports/lcov.info
    
    echo "ğŸ“‹ JSON report..."
    cargo llvm-cov --workspace --all-features --json --output-path target/coverage-reports/coverage.json
    
    echo "ğŸ“ Summary report..."
    cargo llvm-cov --workspace --all-features --summary-only > target/coverage-reports/summary.txt
    
    echo "âœ… Coverage reports generated in target/coverage-reports/"
    echo "ğŸŒ Open target/coverage-reports/html/index.html to view detailed report"

# Coverage check with configurable baseline
coverage-check baseline="70":
    #!/usr/bin/env bash
    set -euo pipefail
    export TEST_MODE=1
    
    BASELINE_COVERAGE={{baseline}}
    echo "ğŸ¯ Checking coverage against baseline: ${BASELINE_COVERAGE}%"
    
    # Generate coverage and extract percentage
    COVERAGE_OUTPUT=$(cargo llvm-cov --workspace --all-features --summary-only)
    COVERAGE=$(echo "$COVERAGE_OUTPUT" | grep -E "^TOTAL" | awk '{print $10}' | sed 's/%//' || echo "0")
    
    echo "Current coverage: ${COVERAGE}%"
    echo "$COVERAGE_OUTPUT"
    
    # Compare with baseline
    if (( $(echo "$COVERAGE >= $BASELINE_COVERAGE" | bc -l) )); then
        echo "âœ… Coverage meets baseline requirement (${COVERAGE}% >= ${BASELINE_COVERAGE}%)"
    else
        echo "âŒ Coverage below baseline: ${COVERAGE}% < ${BASELINE_COVERAGE}%"
        echo "ğŸ’¡ Consider adding tests to improve coverage"
        exit 1
    fi

# =============================================================================
# ENHANCED PERFORMANCE TOOLS
# =============================================================================

# Run continuous benchmarks with analysis
bench-continuous:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "ğŸ“Š Running continuous benchmarks..."
    
    # Create benchmark results directory
    mkdir -p benchmark-results/$(date +%Y%m%d_%H%M%S)
    
    # Run benchmarks
    cargo bench --workspace 2>&1 | tee benchmark-results/latest.txt
    
    # Analyze results if script exists
    if [ -f "./scripts/performance/analyze-results.sh" ]; then
        ./scripts/performance/analyze-results.sh
    fi
    
    echo "âœ… Benchmarks complete!"

# Generate CPU flamegraph
profile-cpu:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "ğŸ”¥ Generating CPU flamegraph..."
    
    # Install flamegraph if not available
    if ! cargo flamegraph --version &> /dev/null; then
        echo "ğŸ“¦ Installing flamegraph..."
        cargo install flamegraph
    fi
    
    # Generate flamegraph for auth-service
    cd auth-service
    cargo flamegraph --bin auth-service -- --help
    
    echo "âœ… Flamegraph generated!"

# Memory profiling
profile-memory:
    #!/usr/bin/env bash
    set -euo pipefail
    echo "ğŸ§  Memory profiling..."
    
    # Use valgrind if available
    if command -v valgrind &> /dev/null; then
        cd auth-service
        cargo build --bin auth-service
        valgrind --tool=massif target/debug/auth-service --help
        echo "âœ… Memory profile generated with valgrind"
    else
        echo "âš ï¸ Valgrind not available, skipping memory profiling"
    fi

