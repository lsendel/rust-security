lint:
    # Treat critical issues strongly, keep others as warnings
    cargo clippy --workspace --all-features -- \
        -W clippy::perf \
        -W clippy::suspicious \
        -W clippy::pedantic

build:
    cargo build --workspace --all-features

build-release:
    cargo build --workspace --all-features --release

test:
