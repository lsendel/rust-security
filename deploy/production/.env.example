# Production Environment Variables
# Copy this to .env and fill in secure values

# Database Configuration
DATABASE_URL=postgresql://auth_user:SECURE_DB_PASSWORD@postgres:5432/auth_production
POSTGRES_DB=auth_production
POSTGRES_USER=auth_user
POSTGRES_PASSWORD=SECURE_DB_PASSWORD

# Redis Configuration
REDIS_URL=redis://:SECURE_REDIS_PASSWORD@redis:6379/0
REDIS_PASSWORD=SECURE_REDIS_PASSWORD

# Security Secrets (Generate with: openssl rand -base64 64)
JWT_SECRET=YOUR_JWT_SECRET_HERE_64_CHARS_MIN
ADMIN_SECRET=YOUR_ADMIN_SECRET_HERE_64_CHARS_MIN
REQUEST_SIGNING_SECRET=YOUR_SIGNING_SECRET_HERE_64_CHARS_MIN

# Monitoring
GRAFANA_ADMIN_PASSWORD=SECURE_GRAFANA_PASSWORD
GRAFANA_SECRET_KEY=YOUR_GRAFANA_SECRET_KEY_HERE

# Feature Flags
REQUIRE_ADMIN_SIGNING=true
ENABLE_METRICS=true
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true

# Scaling Configuration
AUTH_SERVICE_REPLICAS=3
POLICY_SERVICE_REPLICAS=2
MAX_CONNECTIONS_PER_SERVICE=1000
RATE_LIMIT_PER_MINUTE=10000

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Logging
LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=90
METRICS_RETENTION_DAYS=30

# Auto-scaling Thresholds
CPU_SCALE_UP_THRESHOLD=70
CPU_SCALE_DOWN_THRESHOLD=30
MEMORY_SCALE_UP_THRESHOLD=80
MEMORY_SCALE_DOWN_THRESHOLD=40

# Security Monitoring
FAILED_LOGIN_THRESHOLD=5
RATE_LIMIT_THRESHOLD=1000
SUSPICIOUS_IP_THRESHOLD=100