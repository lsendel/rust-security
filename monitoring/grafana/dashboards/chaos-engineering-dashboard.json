{
  "dashboard": {
    "id": null,
    "title": "Chaos Engineering & Security Testing Dashboard",
    "tags": ["chaos-engineering", "security", "resilience"],
    "style": "dark",
    "timezone": "UTC",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(up, environment)",
          "refresh": "time",
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        },
        {
          "name": "experiment",
          "type": "query", 
          "query": "label_values(chaos_mesh_experiments, experiment_name)",
          "refresh": "time",
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Chaos Engineering Overview",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
        "collapsed": false,
        "panels": []
      },
      {
        "id": 2,
        "title": "Active Chaos Experiments",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 1},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 3}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area"
        },
        "targets": [
          {
            "expr": "sum(chaos_mesh_experiments{status=\"injecting\"})",
            "legendFormat": "Active Experiments",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Experiment Success Rate (24h)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 1},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "chaos_experiment_success_rate_24h * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Services Under Test",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 1},
        "targets": [
          {
            "expr": "count(up{job=~\".*service\"} == 1)",
            "legendFormat": "Healthy Services",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Security Tests Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 1},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "sum(security_test_results{status=\"failed\"})",
            "legendFormat": "Failed Tests",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Service Health During Chaos",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9},
        "collapsed": false
      },
      {
        "id": 7,
        "title": "Service Availability",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 0,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "auto",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            }
          }
        },
        "targets": [
          {
            "expr": "service_availability_5m{job=~\"$service\"} * 100",
            "legendFormat": "{{ job }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Response Time P95",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "palette-classic"}
          }
        },
        "targets": [
          {
            "expr": "service_response_time_p95_5m{job=~\"$service\"}",
            "legendFormat": "{{ job }} P95",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Error Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 18},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "palette-classic"}
          }
        },
        "targets": [
          {
            "expr": "service_error_rate_5m{job=~\"$service\"} * 100",
            "legendFormat": "{{ job }} Error Rate",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Resilience Score",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 18},
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "min": 0,
            "max": 100,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 90}
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "resilience_score{job=~\"$service\"}",
            "legendFormat": "{{ job }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 11,
        "title": "Chaos Experiment Timeline",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 26},
        "collapsed": false
      },
      {
        "id": 12,
        "title": "Experiment Status Over Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 27},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "bars",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 80,
              "gradientMode": "none"
            }
          }
        },
        "targets": [
          {
            "expr": "chaos_mesh_experiments{experiment_name=~\"$experiment\"}",
            "legendFormat": "{{ experiment_name }} - {{ status }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 13,
        "title": "Security Testing Dashboard",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 35},
        "collapsed": false
      },
      {
        "id": 14,
        "title": "Attack Detection Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 36},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 90}
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "attack_detection_rate_5m * 100",
            "legendFormat": "Detection Rate",
            "refId": "A"
          }
        ]
      },
      {
        "id": 15,
        "title": "False Positive Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 36},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "false_positive_rate_5m * 100",
            "legendFormat": "False Positive Rate",
            "refId": "A"
          }
        ]
      },
      {
        "id": 16,
        "title": "Attack Success Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 36},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "attack_success_rate_5m * 100",
            "legendFormat": "Attack Success Rate",
            "refId": "A"
          }
        ]
      },
      {
        "id": 17,
        "title": "Security Events Timeline",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 44},
        "targets": [
          {
            "expr": "rate(security_attacks_total[1m])",
            "legendFormat": "{{ attack_type }} Attacks",
            "refId": "A"
          },
          {
            "expr": "rate(security_events_detected_total[1m])",
            "legendFormat": "{{ attack_type }} Detected",
            "refId": "B"
          }
        ]
      },
      {
        "id": 18,
        "title": "Resilience Pattern Validation",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 52},
        "collapsed": false
      },
      {
        "id": 19,
        "title": "Circuit Breaker Effectiveness",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 53},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 60},
                {"color": "green", "value": 80}
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "circuit_breaker_effectiveness * 100",
            "legendFormat": "Circuit Breaker",
            "refId": "A"
          }
        ]
      },
      {
        "id": 20,
        "title": "Retry Pattern Effectiveness",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 53},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 60},
                {"color": "green", "value": 80}
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "retry_pattern_effectiveness * 100",
            "legendFormat": "Retry Pattern",
            "refId": "A"
          }
        ]
      },
      {
        "id": 21,
        "title": "Fallback Pattern Effectiveness",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 53},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 60},
                {"color": "green", "value": 80}
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "fallback_pattern_effectiveness * 100",
            "legendFormat": "Fallback Pattern",
            "refId": "A"
          }
        ]
      },
      {
        "id": 22,
        "title": "Blast Radius Analysis",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 53},
        "targets": [
          {
            "expr": "chaos_blast_radius_services",
            "legendFormat": "Affected Services",
            "refId": "A"
          },
          {
            "expr": "chaos_blast_radius_pods",
            "legendFormat": "Affected Pods",
            "refId": "B"
          }
        ]
      },
      {
        "id": 23,
        "title": "Recovery Analysis",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 61},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "palette-classic"}
          }
        },
        "targets": [
          {
            "expr": "chaos_recovery_time_seconds",
            "legendFormat": "{{ experiment_name }} Recovery Time",
            "refId": "A"
          },
          {
            "expr": "service_recovery_time_seconds",
            "legendFormat": "{{ job }} Service Recovery",
            "refId": "B"
          }
        ]
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Chaos Experiments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(chaos_mesh_experiment_start_time[1m])",
          "iconColor": "red",
          "titleFormat": "Chaos: {{ experiment_name }}",
          "textFormat": "{{ experiment_type }} experiment started"
        },
        {
          "name": "Security Tests",
          "datasource": "Prometheus", 
          "enable": true,
          "expr": "changes(security_test_start_time[1m])",
          "iconColor": "orange",
          "titleFormat": "Security: {{ test_name }}",
          "textFormat": "{{ attack_type }} test started"
        }
      ]
    },
    "links": [
      {
        "title": "Chaos Engineering Runbook",
        "url": "https://chaos-engineering.rust-security.com/runbooks",
        "type": "link"
      },
      {
        "title": "Security Testing Guide",
        "url": "https://security-testing.rust-security.com/guide",
        "type": "link"
      }
    ],
    "schemaVersion": 30,
    "version": 1,
    "editable": true
  }
}
