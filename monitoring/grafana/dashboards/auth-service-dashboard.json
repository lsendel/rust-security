{
  "dashboard": {
    "id": null,
    "title": "Auth Service - Comprehensive Monitoring",
    "description": "Production-grade monitoring dashboard for Auth Service with SLO tracking, performance metrics, and security monitoring",
    "tags": ["auth-service", "security", "slo", "performance"],
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 39,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "variables": [
      {
        "name": "client_id",
        "type": "query",
        "query": "label_values(auth_http_requests_total, client_id)",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "multi": true
      }
    ],
    "panels": [
      {
        "id": 1,
        "title": "SLO Summary",
        "type": "stat",
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(auth_http_requests_total{status_code!~\"5..\"}[5m])) / sum(rate(auth_http_requests_total[5m]))",
            "legendFormat": "Availability SLO",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(auth_http_request_duration_seconds_bucket{endpoint!=\"/metrics\"}[5m])) by (le))",
            "legendFormat": "P99 Latency (s)",
            "refId": "B"
          },
          {
            "expr": "sum(rate(auth_authentication_attempts_detailed_total{result=\"failure\"}[5m])) / sum(rate(auth_authentication_attempts_detailed_total[5m]))",
            "legendFormat": "Auth Error Rate",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.99},
                {"color": "green", "value": 0.999}
              ]
            },
            "displayName": "${__field.labels.legendFormat}"
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "P99 Latency (s)"},
              "properties": [
                {"id": "unit", "value": "s"},
                {"id": "thresholds", "value": {
                  "steps": [
                    {"color": "green", "value": null},
                    {"color": "yellow", "value": 0.05},
                    {"color": "red", "value": 0.1}
                  ]
                }}
              ]
            }
          ]
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "title": "Request Rate and Errors",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(auth_http_requests_total{client_id=~\"$client_id\"}[5m])) by (status_code)",
            "legendFormat": "{{status_code}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {"label": "Requests/sec", "min": 0},
          {"show": false}
        ],
        "xAxis": {"show": true},
        "legend": {"show": true, "values": true, "current": true},
        "seriesOverrides": [
          {
            "alias": "/5.*/",
            "color": "red",
            "fillBelowTo": "0xx"
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(auth_http_request_duration_seconds_bucket{client_id=~\"$client_id\"}[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(auth_http_request_duration_seconds_bucket{client_id=~\"$client_id\"}[5m])) by (le))",
            "legendFormat": "P90",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(auth_http_request_duration_seconds_bucket{client_id=~\"$client_id\"}[5m])) by (le))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yAxes": [
          {"label": "Seconds", "min": 0, "logBase": 2},
          {"show": false}
        ],
        "legend": {"show": true, "values": true, "current": true},
        "thresholds": [
          {"value": 0.1, "colorMode": "critical", "op": "gt", "fill": false, "line": true}
        ]
      },
      {
        "id": 4,
        "title": "Token Operations",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(auth_token_issuance_total{client_id=~\"$client_id\"}[5m])) by (result)",
            "legendFormat": "Issuance - {{result}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(auth_token_validation_total{client_id=~\"$client_id\"}[5m])) by (result)",
            "legendFormat": "Validation - {{result}}",
            "refId": "B"
          },
          {
            "expr": "sum(rate(auth_token_revocation_total{client_id=~\"$client_id\"}[5m])) by (result)",
            "legendFormat": "Revocation - {{result}}",
            "refId": "C"
          }
        ],
        "yAxes": [
          {"label": "Operations/sec", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 5,
        "title": "Authentication Methods",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(auth_authentication_attempts_detailed_total{client_id=~\"$client_id\"}[5m])) by (method)",
            "legendFormat": "{{method}}",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {"mode": "single"},
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 6,
        "title": "Cache Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(auth_cache_operations_total{result=\"hit\"}[5m])) / sum(rate(auth_cache_operations_total[5m]))",
            "legendFormat": "Hit Rate",
            "refId": "A"
          },
          {
            "expr": "sum(rate(auth_cache_operations_total{result=\"miss\"}[5m]))",
            "legendFormat": "Miss Rate",
            "refId": "B"
          }
        ],
        "yAxes": [
          {"label": "Ratio/Rate", "min": 0, "max": 1},
          {"show": false}
        ]
      },
      {
        "id": 7,
        "title": "Security Events",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(auth_security_violations_total{client_id=~\"$client_id\"}[5m])) by (violation_type, severity)",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"desc": true, "displayName": "Value"}]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Rate Limiting",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(auth_rate_limit_enforcement_total{client_id=~\"$client_id\"}[5m])) by (result)",
            "legendFormat": "{{result}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {"label": "Events/sec", "min": 0},
          {"show": false}
        ],
        "seriesOverrides": [
          {
            "alias": "blocked",
            "color": "red"
          },
          {
            "alias": "allowed",
            "color": "green"
          }
        ]
      },
      {
        "id": 9,
        "title": "System Resources",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "auth_system_resources{resource_type=\"memory\", unit=\"bytes\"}",
            "legendFormat": "Memory Usage",
            "refId": "A"
          },
          {
            "expr": "auth_system_resources{resource_type=\"cpu\", unit=\"percent\"}",
            "legendFormat": "CPU Usage",
            "refId": "B"
          }
        ],
        "yAxes": [
          {"label": "Usage", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 10,
        "title": "Background Tasks",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 28},
        "targets": [
          {
            "expr": "sum(rate(auth_background_task_total[5m])) by (task_type, result)",
            "legendFormat": "{{task_type}} - {{result}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {"label": "Tasks/sec", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 11,
        "title": "Connection Health",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 28},
        "targets": [
          {
            "expr": "auth_connection_health{status=\"healthy\"}",
            "legendFormat": "{{connection_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "Unhealthy"}}, "type": "value"},
              {"options": {"1": {"text": "Healthy"}}, "type": "value"}
            ]
          }
        },
        "options": {
          "colorMode": "background",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 12,
        "title": "Error Budget Burn Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 36},
        "targets": [
          {
            "expr": "(\n  1 - (\n    sum(rate(auth_http_requests_total{status_code!~\"5..\"}[1h]))\n    /\n    sum(rate(auth_http_requests_total[1h]))\n  )\n) * 24 * 30",
            "legendFormat": "Availability Error Budget Burn (1h)",
            "refId": "A"
          },
          {
            "expr": "(\n  histogram_quantile(0.99, sum(rate(auth_http_request_duration_seconds_bucket[1h])) by (le)) > 0.1\n) * 24 * 30",
            "legendFormat": "Latency Error Budget Burn (1h)",
            "refId": "B"
          }
        ],
        "yAxes": [
          {"label": "Days of budget consumed per day", "min": 0},
          {"show": false}
        ],
        "thresholds": [
          {"value": 14.4, "colorMode": "critical", "op": "gt", "fill": false, "line": true, "yAxis": "left"}
        ],
        "alert": {
          "conditions": [
            {
              "query": {"params": ["A", "1h", "now"]},
              "reducer": {"type": "avg", "params": []},
              "evaluator": {"params": [14.4], "type": "gt"}
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "10s",
          "handler": 1,
          "name": "Auth Service Error Budget Burn",
          "noDataState": "no_data"
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "enable": true,
          "expr": "changes(auth_service_info[1d])",
          "iconColor": "blue",
          "type": "tags"
        }
      ]
    }
  }
}