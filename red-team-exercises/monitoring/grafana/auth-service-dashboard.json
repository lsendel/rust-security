{
  "dashboard": {
    "id": null,
    "title": "Auth Service Security Dashboard",
    "tags": ["auth-service", "security", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "links": [],
    "panels": [
      {
        "id": 1,
        "title": "Service Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"auth-service\"}",
            "legendFormat": "Service Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 3,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"auth-service\"}[5m]))",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 100
                },
                {
                  "color": "red",
                  "value": 1000
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 3,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"auth-service\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{service=\"auth-service\"}[5m]))",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.01
                },
                {
                  "color": "red",
                  "value": 0.05
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 3,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Response Time (95th percentile)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=\"auth-service\"}[5m])) by (le))",
            "legendFormat": "P95 Latency",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.5
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 3,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Authentication Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(auth_login_attempts_total[5m])) by (status)",
            "legendFormat": "{{status}} logins/sec",
            "refId": "A"
          },
          {
            "expr": "sum(rate(auth_mfa_attempts_total[5m])) by (status)",
            "legendFormat": "{{status}} MFA/sec",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Attempts per second",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 3
        }
      },
      {
        "id": 6,
        "title": "Security Events",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(auth_rate_limit_triggered_total[5m]))",
            "legendFormat": "Rate limit triggers/sec",
            "refId": "A"
          },
          {
            "expr": "sum(rate(auth_idor_attempts_total[5m]))",
            "legendFormat": "IDOR attempts/sec",
            "refId": "B"
          },
          {
            "expr": "sum(rate(auth_token_replay_attempts_total[5m]))",
            "legendFormat": "Token replay attempts/sec",
            "refId": "C"
          },
          {
            "expr": "sum(rate(auth_totp_replay_attempts_total[5m]))",
            "legendFormat": "TOTP replay attempts/sec",
            "refId": "D"
          },
          {
            "expr": "sum(rate(auth_pkce_downgrade_attempts_total[5m]))",
            "legendFormat": "PKCE downgrade attempts/sec",
            "refId": "E"
          }
        ],
        "yAxes": [
          {
            "label": "Events per second",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 3
        }
      },
      {
        "id": 7,
        "title": "Failed Login Attempts by IP",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum(rate(auth_login_attempts_total{status=\"failed\"}[5m])) by (source_ip))",
            "legendFormat": "",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "job": true,
                "instance": true
              },
              "indexByName": {},
              "renameByName": {
                "source_ip": "Source IP",
                "Value": "Failed Attempts/sec"
              }
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 11
        }
      },
      {
        "id": 8,
        "title": "JWT Token Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(auth_jwt_tokens_issued_total[5m]))",
            "legendFormat": "Tokens issued/sec",
            "refId": "A"
          },
          {
            "expr": "sum(rate(auth_jwt_tokens_validated_total[5m])) by (status)",
            "legendFormat": "{{status}} validations/sec",
            "refId": "B"
          },
          {
            "expr": "sum(rate(auth_jwt_tokens_refreshed_total[5m]))",
            "legendFormat": "Tokens refreshed/sec",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Tokens per second",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 11
        }
      },
      {
        "id": 9,
        "title": "Database Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(auth_database_query_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "95th percentile query time",
            "refId": "A"
          },
          {
            "expr": "sum(rate(auth_database_connections_active[5m]))",
            "legendFormat": "Active connections",
            "refId": "B"
          },
          {
            "expr": "sum(rate(auth_database_connection_failures_total[5m]))",
            "legendFormat": "Connection failures/sec",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (seconds) / Count",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 19
        }
      },
      {
        "id": 10,
        "title": "Redis Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(auth_redis_operation_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "95th percentile operation time",
            "refId": "A"
          },
          {
            "expr": "sum(rate(auth_redis_operations_total[5m])) by (operation)",
            "legendFormat": "{{operation}} ops/sec",
            "refId": "B"
          },
          {
            "expr": "sum(rate(auth_redis_connection_failures_total[5m]))",
            "legendFormat": "Connection failures/sec",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (seconds) / Ops per second",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 19
        }
      },
      {
        "id": 11,
        "title": "Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_working_set_bytes{container=\"auth-service\"} / container_spec_memory_limit_bytes{container=\"auth-service\"}",
            "legendFormat": "Memory usage %",
            "refId": "A"
          },
          {
            "expr": "rate(container_cpu_usage_seconds_total{container=\"auth-service\"}[5m]) / container_spec_cpu_quota{container=\"auth-service\"} * container_spec_cpu_period{container=\"auth-service\"}",
            "legendFormat": "CPU usage %",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 1
          },
          {
            "show": false
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 27
        }
      },
      {
        "id": 12,
        "title": "Circuit Breaker Status",
        "type": "stat",
        "targets": [
          {
            "expr": "auth_circuit_breaker_state",
            "legendFormat": "{{service}} - {{state}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "CLOSED",
                    "color": "green"
                  },
                  "1": {
                    "text": "OPEN",
                    "color": "red"
                  },
                  "2": {
                    "text": "HALF-OPEN",
                    "color": "yellow"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 27
        }
      },
      {
        "id": 13,
        "title": "Compliance Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(auth_admin_actions_total[5m])) by (has_mfa)",
            "legendFormat": "Admin actions (MFA: {{has_mfa}})",
            "refId": "A"
          },
          {
            "expr": "sum(rate(auth_session_created_total[5m]))",
            "legendFormat": "Sessions created/sec",
            "refId": "B"
          },
          {
            "expr": "sum(rate(auth_session_expired_total[5m]))",
            "legendFormat": "Sessions expired/sec",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Events per second",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 35
        }
      },
      {
        "id": 14,
        "title": "TLS Certificate Status",
        "type": "stat",
        "targets": [
          {
            "expr": "(auth_tls_certificate_expiry_seconds - time()) / 86400",
            "legendFormat": "Days until expiry",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "d",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 30
                },
                {
                  "color": "green",
                  "value": 60
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 35
        }
      },
      {
        "id": 15,
        "title": "Threat Detection Summary",
        "type": "table",
        "targets": [
          {
            "expr": "sum(increase(auth_rate_limit_triggered_total[1h]))",
            "legendFormat": "Rate Limit Triggers",
            "refId": "A",
            "format": "table",
            "instant": true
          },
          {
            "expr": "sum(increase(auth_idor_attempts_total[1h]))",
            "legendFormat": "IDOR Attempts",
            "refId": "B",
            "format": "table",
            "instant": true
          },
          {
            "expr": "sum(increase(auth_token_replay_attempts_total[1h]))",
            "legendFormat": "Token Replay Attempts",
            "refId": "C",
            "format": "table",
            "instant": true
          },
          {
            "expr": "sum(increase(auth_totp_replay_attempts_total[1h]))",
            "legendFormat": "TOTP Replay Attempts",
            "refId": "D",
            "format": "table",
            "instant": true
          },
          {
            "expr": "sum(increase(auth_pkce_downgrade_attempts_total[1h]))",
            "legendFormat": "PKCE Downgrade Attempts",
            "refId": "E",
            "format": "table",
            "instant": true
          },
          {
            "expr": "sum(increase(auth_login_attempts_total{status=\"failed\"}[1h]))",
            "legendFormat": "Failed Login Attempts",
            "refId": "F",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "indexByName": {},
              "renameByName": {
                "Value #A": "Rate Limit Triggers",
                "Value #B": "IDOR Attempts",
                "Value #C": "Token Replay Attempts",
                "Value #D": "TOTP Replay Attempts",
                "Value #E": "PKCE Downgrade Attempts",
                "Value #F": "Failed Login Attempts"
              }
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 43
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"auth-service\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "interval",
          "type": "interval",
          "query": "5m,10m,30m,1h,6h,12h",
          "refresh": 2,
          "current": {
            "text": "5m",
            "value": "5m"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Security Alerts",
          "datasource": "Prometheus",
          "expr": "ALERTS{alertname=~\".*AuthService.*\", severity=\"critical\"}",
          "iconColor": "red",
          "enable": true
        },
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "increase(kube_deployment_status_observed_generation{deployment=\"auth-service\"}[5m]) > 0",
          "iconColor": "blue",
          "enable": true
        }
      ]
    }
  }
}