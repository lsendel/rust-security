# Server Configuration
BIND_ADDR=127.0.0.1:8080

# Redis Configuration (optional)
# REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=CHANGE_ME_STRONG_SECRET_REQUIRED_FOR_PRODUCTION
JWT_ISSUER=auth-service
JWT_AUDIENCE=api-clients
TOKEN_EXPIRY_SECONDS=3600

# Client Credentials (format: client_id:client_secret;client_id2:client_secret2)
CLIENT_CREDENTIALS=your_client_id:CHANGE_ME_STRONG_SECRET_REQUIRED;admin_client:CHANGE_ME_STRONG_SECRET_REQUIRED

# Allowed OAuth Scopes (comma-separated)
ALLOWED_SCOPES=read,write,admin

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security Settings
REQUEST_BODY_LIMIT_MB=1
ENABLE_CORS=false
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Logging
RUST_LOG=info,auth_service=debug
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_TIMEOUT_SECONDS=30
